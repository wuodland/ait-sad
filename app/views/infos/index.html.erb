<p id="notice"><%= notice %></p>
<h1>Personal Information</h1>

<table>
  <thead>
    <tr><%= link_to '<button type="button">Click to add New User information</button>'.html_safe, new_info_path %>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Phone number</th>
      <th colspan="3">Post Editing tools</th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td><%= info.First_name %></td>
        <td><%= info.Last_name %></td>
        <td><%= info.email %></td>
        <td><%= info.Address %></td>
        <td><%= info.gender %></td>
        <td><%= info.Age %></td>
        <td><%= info.PhoneNumber %></td>
        <td><%= link_to 'Show', info %></td>
        <td><%= link_to 'Edit', edit_info_path(info) %></td>
        <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>